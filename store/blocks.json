{
  "product-list": {
    "children": ["flex-layout.row#list-row"]
  },
  "flex-layout.row#list-row": {
    "children": ["flex-layout.col#image", "flex-layout.col#container.mobile"],
    "props": {
      "colSizing": "auto",
      "preserveLayoutOnMobile": "true"
    }
  },
  "flex-layout.col#image": {
    "children": ["image"]
  },
  "flex-layout.col#message": {
    "children": ["message"]
  },
  "flex-layout.col#container": {
    "children": ["flex-layout.row#container2", "flex-layout.col#message"],
    "props": {
      "width": "grow"
    }
  },
  "flex-layout.col#container.mobile": {
    "children": [
      "flex-layout.row#top.mobile",
      "flex-layout.col#quantity-selector",
      "flex-layout.col#price",
      "flex-layout.col#message"
    ],
    "props": {
      "width": "grow"
    }
  },
  "flex-layout.row#top.mobile": {
    "children": [
      "flex-layout.col#product-description",
      "flex-layout.col#remove-button"
    ],
    "props": {
      "colSizing": "auto",
      "preserveLayoutOnMobile": "true"
    }
  },
  "flex-layout.row#container2": {
    "children": [
      "flex-layout.col#product-description",
      "flex-layout.col#quantity-selector",
      "flex-layout.col#price",
      "flex-layout.col#remove-button"
    ],
    "props": {
      "preserveLayoutOnMobile": "true",
      "colSizing": "auto"
    }
  },
  "flex-layout.col#product-description": {
    "children": ["product-description"],
    "props": {
      "width": "grow"
    }
  },
  "flex-layout.col#quantity-selector": {
    "children": ["quantity-selector"],
    "props": {
      "preventHorizontalStretch": "true"
    }
  },
  "flex-layout.col#price": {
    "children": ["price"],
    "props": {
      "preventHorizontalStretch": "true"
    }
  },
  "flex-layout.col#remove-button": {
    "children": ["remove-button"]
  }
}
