{
  "product-list-content-mobile": {
    "children": ["flex-layout.row#list-row.mobile"],
    "props": {
      "marginLeft": "5"
    }
  },
  "flex-layout.row#list-row.mobile": {
    "children": [
      "flex-layout.col#image",
      "flex-layout.col#main-container.mobile"
    ],
    "props": {
      "paddingBottom": "5",
      "paddingTop": "5",
      "colSizing": "auto",
      "preserveLayoutOnMobile": "true"
    }
  },
  "flex-layout.col#main-container.mobile": {
    "children": [
      "flex-layout.row#top.mobile",
      "flex-layout.row#quantity-selector",
      "flex-layout.row#unit-price",
      "flex-layout.row#price.mobile",
      "flex-layout.row#message"
    ],
    "props": {
      "width": "grow"
    }
  },
  "flex-layout.row#top.mobile": {
    "children": [
      "flex-layout.col#product-description",
      "flex-layout.col#remove-button"
    ],
    "props": {
      "colSizing": "auto",
      "preserveLayoutOnMobile": "true"
    }
  },
  "flex-layout.row#price.mobile": {
    "children": ["price#mobile"],
    "props": {
      "marginTop": "5",
      "preventHorizontalStretch": "true"
    }
  },
  "price#mobile": {
    "props": {
      "textAlign": "left"
    }
  }
}
